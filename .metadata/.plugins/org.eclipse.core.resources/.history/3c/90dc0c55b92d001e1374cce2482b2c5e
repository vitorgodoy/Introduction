import java.io.File;

import org.openqa.selenium.OutputType;
import org.openqa.selenium.TakesScreenshot;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.chrome.ChromeDriver;
import org.apache.commons.io.FileUtils;


public class MaximizeCookie {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		System.setProperty("webdriver.chrome.driver", "C:\\WebDrivers\\chromedriver.exe");
		WebDriver driver = new ChromeDriver();
		
		//maximizar a tela
		driver.manage().window().maximize();
		
		//excluir todos os cookies antes de rodar o teste:
		driver.manage().deleteAllCookies();
		//driver.manage().deleteCookieNamed("sessionKey");
		
		driver.get("http://www.google.com/");
		
		
		//uses the takescreenchot method to take the screenshot. OutputType, say in what type the output should be. In that case, a file.
		//thats why we have the src variable in File object
		File src = ((TakesScreenshot)driver).getScreenshotAs(OutputType.FILE);
		
		
		//adicionar o scr em um arquivo com o nome screenshot.png
		FileUtils.copyFile(src,new File("C://screenshot.png"));
		
	}
}
